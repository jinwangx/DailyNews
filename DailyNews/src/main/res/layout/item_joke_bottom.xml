<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout

            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@id/ib_up"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/action_btn_comment_up_selector"
                />
            <TextView
                android:id="@id/tv_up"
                android:text="顶起"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageButton
                android:id="@id/ib_down"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/action_btn_comment_down_selector"
                />
            <TextView
                android:id="@id/tv_down"
                android:padding="0dp"
                android:text="鄙视"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_forward"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@id/ib_forward"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/action_btn_share_selector"
                />
            <TextView
                android:id="@id/tv_forward"
                android:text="转发"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@id/ib_comment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/action_btn_comment_selector"

                />
            <TextView
                android:id="@id/tv_commentCount"
                android:text="评论"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/top_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>